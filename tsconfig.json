{
	"compilerOptions": {
		"module": "CommonJS",
		"target": "ES2020",
		"outDir": "out",
		"lib": [
			"ES2020",
			"DOM"
		],
		"sourceMap": true,
		"rootDir": "src",
		"strict": true,
		"moduleResolution": "node",
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"declaration": true,
		"declarationMap": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"types": ["node"]
	},
	"exclude": [
		"node_modules",
		".vscode-test",
		"out",
		"src/chatApiHook.ts",
		"src/chatResponseWatcher.ts",
		"src/commandListener.ts",
		"src/detectionTimers.ts",
		"src/extension_new.ts",
		"src/finalize.ts",
		"src/hooks",
		"src/promptDetector.ts",
		"src/runtime.ts",
		"src/specstoryParser.ts",
		"src/utils/logging.ts",
		"src/utils/promptProcessing.ts",
		"src/utils/statusBar.ts",
		"src/utils/fileValidation.ts",
		"src/utils/htmlGenerator.ts",
		"src/utils/timeUtils.ts"
	]
}
