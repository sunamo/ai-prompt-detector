{
  "name": "specstory-autosave",
  "displayName": "SpecStory AutoSave + AI Copilot Prompt Detection",
  "description": "Auto-exports GitHub Copilot Chat to SpecStory documentation + instant AI prompt detection with quality verification notifications",
  "version": "1.1.27",
  "publisher": "sunamocz",
  "icon": "icon.png",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
  "contributes": {
	"viewsContainers": {
	  "activitybar": [
		{
		  "id": "specstory-autosave-activitybar",
		  "title": "SpecStory AutoSave + AI Copilot Prompt Detection",
		  "icon": "icon.png"
		}
	  ]
	},
	"views": {
	  "specstory-autosave-activitybar": [
		{
		  "id": "specstory-autosave-view",
		  "name": "SpecStory AutoSave + AI Copilot Prompt Detection"
		}
	  ]
	},
		"commands": [
			{
				"command": "specstory-autosave.enable",
				"title": "Enable AutoSave",
				"category": "SpecStory"
			},
			{
				"command": "specstory-autosave.disable",
				"title": "Disable AutoSave",
				"category": "SpecStory"
			},
			{
				"command": "specstory-autosave.configure",
				"title": "Configure AutoSave",
				"category": "SpecStory"
			}
		],
		"configuration": {
			"title": "SpecStory AutoSave",
			"properties": {
				"specstory-autosave.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable automatic saving"
				},
				"specstory-autosave.interval": {
					"type": "number",
					"default": 5000,
					"description": "Auto-save interval in milliseconds"
				},
				"specstory-autosave.filePatterns": {
					"type": "array",
					"default": ["**/*.md", "**/*.txt", "**/*.json"],
					"description": "File patterns to auto-save"
				}
			}
		}
	},
	"scripts": {
	   "vscode:prepublish": "pwsh ./install.ps1",
	   "compile": "pwsh ./install.ps1",
	   "build": "pwsh ./install.ps1",
	   "watch": "pwsh ./install.ps1"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "20.x",
		"typescript": "^5.4.5",
		"@vscode/vsce": "^2.22.0"
	},
	"packageManager": "pnpm@9.0.0"
}
