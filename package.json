{
	"name": "specstory-autosave",
	"displayName": "SpecStory AutoSave",
	"description": "VS Code extension for automatic saving and story management",
	"version": "0.0.3",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "specstory-autosave.enable",
				"title": "Enable AutoSave",
				"category": "SpecStory"
			},
			{
				"command": "specstory-autosave.disable",
				"title": "Disable AutoSave",
				"category": "SpecStory"
			},
			{
				"command": "specstory-autosave.configure",
				"title": "Configure AutoSave",
				"category": "SpecStory"
			}
		],
		"configuration": {
			"title": "SpecStory AutoSave",
			"properties": {
				"specstory-autosave.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable automatic saving"
				},
				"specstory-autosave.interval": {
					"type": "number",
					"default": 5000,
					"description": "Auto-save interval in milliseconds"
				},
				"specstory-autosave.filePatterns": {
					"type": "array",
					"default": ["**/*.md", "**/*.txt", "**/*.json"],
					"description": "File patterns to auto-save"
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": ".\\install.ps1",
		"compile": ".\\install.ps1",
		"build": ".\\install.ps1",
		"watch": ".\\install.ps1",
		"pretest": ".\\install.ps1",
		"lint": "eslint src --ext ts",
		"test": "vscode-test"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "20.x",
		"@types/mocha": "^10.0.6",
		"@types/glob": "^8.1.0",
		"@typescript-eslint/eslint-plugin": "^7.14.1",
		"@typescript-eslint/parser": "^7.11.0",
		"eslint": "^8.57.0",
		"typescript": "^5.4.5",
		"@vscode/test-cli": "^0.0.9",
		"@vscode/test-electron": "^2.4.0",
		"mocha": "^10.2.0",
		"glob": "^10.3.10"
	},
	"packageManager": "pnpm@9.0.0"
}
