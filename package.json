{
  "name": "specstory-autosave",
  "displayName": "SpecStory AutoSave + AI Copilot Prompt Detection",
  "description": "Auto-exports GitHub Copilot Chat to SpecStory documentation + instant AI prompt detection with quality verification notifications",
  "version": "1.1.49",
  "publisher": "sunamocz",
  "repository": {
    "type": "git",
    "url": "https://github.com/sunamo/specstory-autosave2.git"
  },
  "icon": "icon.png",
	"engines": {
		"vscode": "^1.74.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onStartupFinished",
		"*"
	],
	"main": "./out/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "specstory-autosave.refresh",
				"title": "Refresh AI Prompts",
				"category": "SpecStory"
			},
			{
				"command": "specstory-autosave.enable",
				"title": "Enable AutoSave",
				"category": "SpecStory"
			},
			{
				"command": "specstory-autosave.disable",
				"title": "Disable AutoSave",
				"category": "SpecStory"
			},
			{
				"command": "specstory-autosave.configure",
				"title": "Configure AutoSave",
				"category": "SpecStory"
			}
		],
		"configuration": {
			"title": "SpecStory AutoSave",
			"properties": {
				"specstory-autosave.enabled": {
					"type": "boolean",
					"default": true,
					"description": "Enable automatic saving"
				},
				"specstory-autosave.interval": {
					"type": "number",
					"default": 5000,
					"description": "Auto-save interval in milliseconds"
				},
				"specstory-autosave.filePatterns": {
					"type": "array",
					"default": ["**/*.md", "**/*.txt", "**/*.json"],
					"description": "File patterns to auto-save"
				},
				"specstory-autosave.maxPrompts": {
					"type": "number",
					"default": 50,
					"description": "Maximum number of prompts to display"
				},
				"specstory-autosave.enableDebugLogs": {
					"type": "boolean",
					"default": false,
					"description": "Enable debug logging"
				},
				"specstory-autosave.customMessage": {
					"type": "string",
					"default": "",
					"description": "Custom notification message"
				}
			}
		},
		"views": {
			"specstory-activity": [
				{
					"id": "specstory-autosave-view",
					"name": "AI Prompts",
					"when": "true"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "specstory-activity",
					"title": "SpecStory AI",
					"icon": "$(comment-discussion)"
				}
			]
		},
		"viewsWelcome": [
			{
				"view": "specstory-autosave-view",
				"contents": "No AI prompts detected yet.\n[Refresh](command:specstory-autosave.refresh)"
			}
		]
	},
	"scripts": {
		"compile": "tsc -p ./",
		"build": "tsc -p ./",
		"watch": "tsc -watch -p ./"
	},
	"devDependencies": {
		"@types/vscode": "^1.74.0",
		"@types/node": "20.x",
		"typescript": "^5.4.5"
	},
	"packageManager": "pnpm@9.0.0"
}
